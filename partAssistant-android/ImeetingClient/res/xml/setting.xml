<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <Preference
        android:defaultValue="true"
        android:key="sounds"
        android:summary="显示您的信息"
        android:title="个人信息" >
    </Preference>

    <PreferenceCategory android:title="可修改您的个人信息" >
    </PreferenceCategory>

    <EditTextPreference
        android:defaultValue=""
        android:digits="0123456789"
        android:inputType="phone"
        android:key="warning_nickname"
        android:summary="warning_time_summary"
        android:title="@string/nickname" >
    </EditTextPreference>

    <EditTextPreference
        android:defaultValue=""
        android:digits="0123456789"
        android:inputType="phone"
        android:key="warning_phone"
        android:summary="warning_time_summary"
        android:title="@string/phone" >
    </EditTextPreference>

    <EditTextPreference
        android:defaultValue=""
        android:digits="0123456789"
        android:inputType="phone"
        android:key="warning_mail"
        android:summary="warning_time_summary"
        android:title="@string/mail" >
    </EditTextPreference>

</PreferenceScreen>