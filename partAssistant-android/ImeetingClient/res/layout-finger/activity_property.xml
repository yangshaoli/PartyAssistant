<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
              android:orientation="vertical"    
              android:layout_width="fill_parent"    
              android:layout_height="fill_parent">  
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<TextView android:id="@+id/activity_name"    
              android:layout_width="wrap_content"    
              android:layout_height="wrap_content"    
              android:singleLine="true"    
              android:textSize="10pt"  
              android:paddingTop="2dip" 
              android:layout_weight="1"
              android:paddingLeft="2dip" 
              android:text="活动啊打飞机啊老大了房间啊肯定是街坊邻居啊东风" 
               />  
         
             
    	<TextView android:id="@+id/activity_time"  
              android:layout_width="180dip"  
              android:layout_height="wrap_content"  
              android:textSize="10pt"  
              android:singleLine="true"
              android:paddingTop="2dip"  
              android:paddingRight="2dip" 
              android:layout_gravity="right"
             />
         <ImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/flag_new_red"
         android:layout_gravity="right"/>      
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/activity_content"
    	android:text=""
    	/>
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/activity_content_n"
    	android:textColor="@color/green"
    	android:text=""
    	/>
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/activity_content1"
    	android:text=""
    	/>
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="@color/yellow"
    	android:id="@+id/activity_content1_n"
    	android:text=""
    	/>
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/activity_content2"
    	android:text=""
    	/>
    <TextView
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textColor="@color/myRed"
    	android:id="@+id/activity_content2_n"
    	android:text=""
    	/>
    </LinearLayout>            
</LinearLayout>  