<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
              android:orientation="vertical"    
              android:layout_width="fill_parent"    
              android:layout_height="fill_parent">  
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
    	<TextView android:id="@+id/people_name"    
              android:layout_width="80dip"    
              android:layout_height="wrap_content"    
              android:singleLine="true"    
              android:paddingTop="2dip"  
              android:paddingLeft="2dip" 
              android:layout_gravity="left"
              android:layout_weight="1"
              android:textColor="@color/black"
              android:textSize="15sp"
              android:text="姓名" 
               />  
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newFlag"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="2dip"
        android:src="@drawable/flag_new_red"
        android:visibility="gone"/>         
    	<TextView android:id="@+id/people_contacts"  
              android:layout_width="80dip"  
              android:layout_height="wrap_content"  
              android:textSize="15sp"
              android:textColor="@color/black" 
              android:singleLine="true"    
              android:paddingTop="2dip"  
              android:paddingRight="2dip" 
              android:layout_gravity="center_horizontal"
              android:text="电话/Email" 
             />  
         <LinearLayout 
       		android:layout_width="wrap_content"
         	android:layout_height="wrap_content" 
         	android:layout_gravity="right"
         	android:layout_marginRight="0dip"
         	android:visibility="gone">
         	<Button
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="代报名"
         	android:id="@+id/btnPeopleRegister"/>  
            <Button
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:text="不报名"
         	android:layout_marginRight="0dip"
         	android:id="@+id/btnPeopleUnRegister"/>   
         </LinearLayout>
         	  
    </LinearLayout>            
</LinearLayout>  