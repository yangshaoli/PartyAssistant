<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bj"
        android:orientation="vertical"
        android:weightSum="1" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:background="@drawable/red_button"
            android:orientation="horizontal"
            android:paddingTop="0dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="37sp"
                android:gravity="center|center_horizontal"
                android:text="@string/send_airenao_title"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bj"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/send_airenao_reciever"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/startTimeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/sendLinout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_toRightOf="@id/txtSend"
                    android:orientation="vertical" >

                    <com.aragoncg.apps.airenao.SDKimp.MyMultiAutoCompleteTextView
                        android:id="@+id/txtSendReciever"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edt_bg"
                        android:completionThreshold="1"
                        android:paddingRight="32dip" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnSendReciever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/sendLinout"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/bg_btn_add"
                    android:paddingTop="10dp" />

            
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/sendLinout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_toRightOf="@id/txtSend"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="@string/inputTip"
                    android:textColor="@color/black"
                    android:textSize="11dip" />
            </LinearLayout>
			<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="20dip"
			android:layout_marginRight="20dip">
			
				<ImageButton
                    android:id="@+id/btnAddTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:layout_alignParentLeft="true"
                    android:background="@drawable/bg_btn_time" />
                <ImageButton
                    android:id="@+id/btnAddDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_btn_destination" />    
				<ImageButton
                    android:id="@+id/btnAddAlarm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_btn_join" />
			</RelativeLayout>
			
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dip"
                android:text="@string/detailActivity"
                android:textColor="@color/black" />
            <!-- <requestFocus /> -->

            <EditText
                android:id="@+id/txtSendLable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dip"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/edt_bg"
                android:freezesText="true"
                android:gravity="top"
                android:hint="@string/hint"
                android:minHeight="220dp" >
            </EditText>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dip"
                android:text="@string/send_ways"
                android:textColor="@color/black"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawSelectorOnTop="true"
                android:prompt="@string/send_ways_title"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="发送短信" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>