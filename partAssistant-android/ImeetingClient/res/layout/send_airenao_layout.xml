<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="@drawable/bg_balloon1"
	android:weightSum="1">
	<TextView android:layout_width="fill_parent"
		android:textColor="#FFFFFF" android:layout_height="37sp"
		android:text="@string/send_airenao_title" android:background="@drawable/blue_button"
		android:gravity="center" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">

		<RelativeLayout android:id="@+id/startTimeLayout"
			android:layout_marginTop="10dp"
			android:layout_width="fill_parent" android:orientation="horizontal"
			android:layout_height="wrap_content">
			<TextView android:layout_width="wrap_content"
				android:id="@+id/txtSend"
				android:layout_height="wrap_content" 
				android:layout_marginLeft="20dp"
				android:layout_marginTop="15dp"
				android:textColor="@color/black"
				android:layout_centerVertical="true"
			    android:text="@string/send_airenao_reciever" />
			<ImageButton android:id="@+id/btnSendReciever"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:src="@android:drawable/ic_menu_add" />
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_toRightOf="@id/txtSend"
				android:layout_toLeftOf="@id/btnSendReciever"
				android:layout_height="wrap_content" 
				android:layout_marginLeft="5dip"
				
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:orientation="vertical">
				<MultiAutoCompleteTextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_marginTop="15dip"
				android:layout_centerVertical="true"
				android:layout_centerHorizontal="true"
				android:completionThreshold="1"
				android:id="@+id/txtSendReciever" />
				<TextView
				android:gravity="top"
				android:layout_width="fill_parent"
				android:layout_marginLeft="20dip"
				android:layout_gravity="center_horizontal"
				android:textColor="@color/myRed"
				android:textSize="11dip"
				android:layout_height="wrap_content"
				android:text="联系人之间请用;隔开"/>
			</LinearLayout>
			
		</RelativeLayout>
		
		<!-- <requestFocus /> -->
		<EditText android:id="@+id/txtSendLable"
			android:layout_marginTop="20dp"
			android:layout_width="fill_parent" android:layout_marginLeft="28dp"
			android:layout_marginRight="19dip" android:background="@drawable/blue_button"
			android:layout_height="wrap_content" 
			android:minHeight="250dp"
			android:layout_weight="1"
			android:freezesText="true">
		</EditText>

		<CheckBox 
			android:id="@+id/cekLink"
			android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="101dp"
			android:textColor="@color/black"
			android:checked="true"
			android:text="带报名链接"/>
		<CheckBox 
			android:id="@+id/cekWithMine" 
			android:layout_gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="true"
			android:textColor="@color/black"
			android:text="使用自己的手机发送"/>

		<Button android:id="@+id/btnSend"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:layout_marginTop="14dp"
			android:paddingLeft="40dp"
			android:paddingRight="40dp"
			android:text="发送"/>
		<Button android:id="@+id/btnRecover"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:layout_marginTop="14dp"
			android:text="恢复默认设置"/>


	</LinearLayout>
</LinearLayout>