<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/bj"
        android:orientation="vertical"
        android:weightSum="1" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:background="@drawable/red_button"
            android:orientation="horizontal"
            android:paddingTop="0dip" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="37sp"
                android:gravity="center|center_horizontal"
                android:text="@string/send_airenao_place"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bj"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/send_airenao_selectplace"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/startTimeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/sendLinout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_toRightOf="@id/txtSend"
                    android:orientation="vertical" >

                    <com.aragoncg.apps.airenao.SDKimp.MyMultiAutoCompleteTextView
                        android:id="@+id/txtSendReciever"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/edt_bg"
                        android:completionThreshold="1"
                        android:paddingRight="32dip" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnSendReciever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/sendLinout"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/bg_btn_add"
                    android:paddingTop="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
